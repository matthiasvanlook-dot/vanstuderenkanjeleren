{
  "name": "leerplatform-ai",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "concurrently -k -n WEB,API -c auto \"pnpm --filter @app/web dev\" \"pnpm --filter @app/api start:dev\"",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
